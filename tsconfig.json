{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES6",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es5",
      "ES6",
      "DOM.Iterable",
      "scripthost",
      "es2015.proxy"
    ]
  },
  "exclude": [
    "node_modules"
  ]

}